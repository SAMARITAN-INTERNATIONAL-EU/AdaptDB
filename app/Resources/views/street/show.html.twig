{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1>Street</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ street.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ street.name }}</td>
            </tr>
            <tr>
                <th>Namenormalized</th>
                <td>{{ street.nameNormalized }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('street_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('street_edit', { 'id': street.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
