{% extends 'base.html.twig' %}

{% block title %}New Data Source{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-6">
            <h1>New Data Source</h1>

            {{ form_start(form) }}

            {{ form_label(form.name) }}

            {% if form.name.vars.errors|length %}
                <div class="alert alert-danger">
                    {{ form_errors(form.name) }}
                </div>
            {% endif %}

            {{ form_widget(form.name, {'attr': {'class': 'form-control textBox_withMarginBottom'}}) }}

            {{ form_label(form.nameShort) }}

            {% if form.nameShort.vars.errors|length %}
                <div class="alert alert-danger">
                    {{ form_errors(form.nameShort) }}
                </div>
            {% endif %}

            {{ form_widget(form.nameShort, {'attr': {'class': 'form-control textBox_withMarginBottom'}}) }}

            <label class="label_for_checkbox">
                {{ form_widget(form.isOfficial) }}
            </label>{{ form.isOfficial.vars.label }}
            <span class="glyphicon glyphicon-info-sign showPointer" aria-hidden="true" data-container="body" role="button" data-title="Information" data-html="true"
                  data-toggle="popover" tabindex="0" data-trigger="focus" data-placement="bottom"
                  data-content='{{ "dataSource_isOfficialDescription" | trans }}'>
            </span>

            <br/>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Default values for imports
                </div>
                <div class="panel-body">
                    <label class="label_for_checkbox">
                        {{ form_widget(form.defaultForAutomaticUpdateForClearlyIdentifiedAddresses) }}
                    </label>{{ form.defaultForAutomaticUpdateForClearlyIdentifiedAddresses.vars.label }}
                    <span class="glyphicon glyphicon-info-sign showPointer" aria-hidden="true" data-container="body" role="button" data-title="Information" data-html="true"
                          data-toggle="popover" tabindex="0" data-trigger="focus" data-placement="bottom"
                          data-content='{{ "dataSource_automaticUpdateForClearlyIdentifiedAddressesDescription" | trans }}'>
                    </span>

                    <br>

                    <label class="label_for_checkbox">
                        {{ form_widget(form.defaultForDetectMissingPersons) }}
                    </label>{{ form.defaultForDetectMissingPersons.vars.label }}
                    <span class="glyphicon glyphicon-info-sign showPointer" aria-hidden="true" data-container="body" role="button" data-title="Information" data-html="true"
                          data-toggle="popover" tabindex="0" data-trigger="focus" data-placement="bottom"
                          data-content='{{ "dataSource_detectMissingPersonsDescription" | trans }}'>
                    </span>

                    <br>

                    <label class="label_for_checkbox">
                        {{ form_widget(form.defaultForEnableGeocoding) }}
                    </label>{{ form.defaultForEnableGeocoding.vars.label }}
                    <span class="glyphicon glyphicon-info-sign showPointer" aria-hidden="true" data-container="body" role="button" data-title="Information" data-html="true"
                          data-toggle="popover" tabindex="0" data-trigger="focus" data-placement="bottom"
                          data-content='{{ "dataSource_automaticUpdateForClearlyIdentifiedAddressesDescription" | trans }}'>
                    </span>
                </div>
            </div>

            <br>

            {{ form_label(form.importKeyColumns) }}
            <span class="glyphicon glyphicon-info-sign showPointer" aria-hidden="true" data-container="body" role="button" data-title="Information" data-html="true"
                  data-toggle="popover" tabindex="0" data-trigger="focus" data-placement="bottom"
                  data-content='{{ "dataSource_keyColumnsDescription" | trans }}'>
            </span>

            {% if form.importKeyColumns.vars.errors|length %}
                <div class="alert alert-danger">
                    {{ form_errors(form.importKeyColumns) }}
                </div>
            {% endif %}

            <div class="checkbox_list">
                {% for importKeyColumnsChild in form.importKeyColumns.children %}
                    <label class="label_for_checkbox">
                    {{ form_widget(importKeyColumnsChild) }}
                    </label>{{ importKeyColumnsChild.vars.label }}
                    <br>
                {% endfor %}
            </div>

            <input class="btn btn-primary" type="submit" value="Create" />
            <a class="btn btn-default" href="{{ path('datasource_index') }}">Cancel</a>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    <script type="text/javascript">

        $(document).ready(function () {
            $('[data-toggle="popover"]').popover();
        });

    </script>

{% endblock %}
