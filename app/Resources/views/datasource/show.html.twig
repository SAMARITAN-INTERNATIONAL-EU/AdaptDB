{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1>Data Source</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dataSource.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dataSource.name }}</td>
            </tr>
            <tr>
                <th>Isprimary</th>
                <td>{% if dataSource.isPrimary %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('datasource_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('datasource_edit', { 'id': dataSource.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
