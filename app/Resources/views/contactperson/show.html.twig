{% extends 'base.html.twig' %}

{% block body %}
    <h1>ContactPerson</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contactPerson.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ contactPerson.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ contactPerson.lastName }}</td>
            </tr>
            <tr>
                <th>Remarks</th>
                <td>{{ contactPerson.remarks }}</td>
            </tr>
            <tr>
                <th>Cellphone</th>
                <td>{{ contactPerson.cellPhone }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contactperson_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('contactperson_edit', { 'id': contactPerson.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
