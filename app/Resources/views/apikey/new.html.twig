{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-6">
        <h1>New API-Key</h1>

        {{ form_start(form) }}
        {{ form_label(form.apiKey) }}
        {{ form_widget(form.apiKey, {'attr': {'class': 'form-control textBox_withMarginBottom'}}) }}
        {{ form_label(form.user) }}
        {{ form_widget(form.user, {'attr': {'class': 'form-control textBox_withMarginBottom'}}) }}
        {{ form_label(form.remarks) }}
        {{ form_widget(form.remarks, {'attr': {'class': 'form-control textBox_withMarginBottom'}}) }}
            <input class="btn btn-primary" type="submit" value="Create" />
            <a class="btn btn-default" href="{{ path('apikey_index') }}">Cancel</a>
        {{ form_end(form) }}


    </div>
</div>
{% endblock %}
