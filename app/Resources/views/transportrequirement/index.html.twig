{% extends 'base.html.twig' %}

{% block title %}Transport Requirements - Overview{% endblock %}


{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1>Transport Requirements - Overview</h1>

            <table class="table table-striped table-bordered table-hover ">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for transportRequirement in transportRequirements %}
                    <tr>
                        <td>{{ transportRequirement.name }}</td>
                        <td class="actions_column">
                            <a href="{{ path('transportrequirement_edit', { 'id': transportRequirement.id }) }}" class="hasGlyphicon"><span class='glyphicon glyphicon-pencil' aria-hidden='true'></span><div class="sr-only">Edit</div></a>
                            <a class="deleteEntityButton hasGlyphicon" href="{{ path('transportrequirement_delete', { 'id': transportRequirement.id }) }}"><span class='glyphicon glyphicon-trash' aria-hidden='true'></span><div class="sr-only">Delete</div></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-default" href="{{ path('transportrequirement_new') }}">New Transport Requirement</a>
            </div>
    </div>
{% endblock %}


{% block javascripts %}

    <script type="text/javascript">
        {% include 'javascripts/Adapt_deleteModalInitializer.js' %}

        $(document).ready(function () {
            var adapt_deleteModalInitializer = new Adapt_deleteModalInitializer("Transport Requirement", 0);
            adapt_deleteModalInitializer.init();
        });

    </script>

{% endblock %}
