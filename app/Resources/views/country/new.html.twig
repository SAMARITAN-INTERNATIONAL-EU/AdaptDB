{% extends 'base.html.twig' %}

{% block title %}New Country{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-6">

            <h1>New Country</h1>

                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                {{ form_errors(form) }}
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control textBox_withMarginBottom'}}) }}

                <input class="btn btn-primary" type="submit" value="Create" />
                <a class="btn btn-default" href="{{ path('datasource_index') }}">Cancel</a>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
