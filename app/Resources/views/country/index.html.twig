{% extends 'base.html.twig' %}

{% block title %}Countries - Overview{% endblock %}

{% block body %}
    <h1>Countries - Overview</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.name }}</td>
                <td class="actions_column">
                    <a class="hasGlyphicon" href="{{ path('country_edit', { 'id': country.id }) }}"><span class='glyphicon glyphicon-pencil' aria-hidden='true'></span><div class="sr-only">Edit</div></a>
                    {# Delete function could be activated later#}
                    {# for now it is not active because deleting countries could cause problems with addresses#}
                    {#<a class="deleteEntityButton hasGlyphicon" href="{{ path('country_delete', { 'id': country.id }) }}"><span class='glyphicon glyphicon-trash' aria-hidden='true'></span><div class="sr-only">Delete</div></a>#}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('country_new') }}">New Country</a>

{% endblock %}


